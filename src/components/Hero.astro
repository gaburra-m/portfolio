---
import Techs from "./Techs.astro";
---
<section class="hero" >
    <section class="hero--1">
        <div>
            <h1>
                Gabriel<br> Morales
            </h1>
            <p>Front-End</p>
            <Techs />
        </div>
    </section>
</section>
<style>
    .hero{
        width: 100%;
        height: 85vh;

        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: flex-start;
    }
    .hero--1{
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2rem;
    }
    div{
        width: 100%;
        max-width: 43.75rem;
    }
    img{
        width: 10vw;
        height: 10vw;
        border-radius: 50%;
    }
    h1{
        font-size: clamp(4.5rem, 10vw, 10rem);
        font-weight: 700;
        line-height: .8;
        margin: 0;
        /* margin-left: -5px; */
    }
    p{
        display: block;
        font-size: 2.25rem;
        color: var(--primary);
        margin: 0 0 0 5px;
        font-weight: 600;
    }
</style>