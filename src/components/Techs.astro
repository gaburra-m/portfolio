---
const techs = [{
    title: "Wordpress",
    svg: "/portfolio/wp.svg"
},
{
    title: "HTML",
    svg: "/portfolio/html.svg"
},
{
    title: "CSS",
    svg: "/portfolio/css.svg"
},
{
    title: "JavaScript",
    svg: "/portfolio/js.svg"
},
{
    title: "React",
    svg: "/portfolio/react.svg"
},
{
    title: "Figma",
    svg: "/portfolio/figma.svg"
}]
---
<div class="techs">
    {techs.map((tech) => <article class="tech">
    <img src={tech.svg} alt={tech.title}>
    <span>{tech.title}</span>
    </article>)}
</div>
<style>
    .techs{
        margin-top: 3.125rem;
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: baseline;
        gap: 1rem;
    }
    .tech{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: .6rem;
    }
    @media screen and (max-width: 27.75rem){
        img{
            width: 30px;
        }
        span{
            font-size: 12px;
        }
        .techs{
            justify-content: center;
        }
    }
</style>

